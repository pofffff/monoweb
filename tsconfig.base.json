{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monoweb/next-app-generator": [
        "plugins/next-app-generator/src/index.ts"
      ],
      "@myran/api": ["libs/myran/api/src/index.ts"],
      "@myran/components": ["libs/myran/components/src/index.ts"],
      "@myran/components/server": ["libs/myran/components/src/server.ts"],
      "@myran/style": ["libs/myran/style/src/index.ts"],
      "@myran/style/server": ["libs/myran/style/src/server.ts"],
      "@myran/types": ["libs/myran/types/src/index.ts"],
      "@shared/api": ["libs/shared/api/src/index.ts"],
      "@shared/components": ["libs/shared/components/src/index.ts"],
      "@shared/components/server": ["libs/shared/components/src/server.ts"],
      "@shared/config": ["libs/shared/config/src/index.ts"],
      "@shared/style": ["libs/shared/style/src/index.ts"],
      "@shared/style/server": ["libs/shared/style/src/server.ts"],
      "@shared/svg/server": ["libs/shared/svg/src/server.ts"],
      "@shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
